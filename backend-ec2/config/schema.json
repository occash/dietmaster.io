{
    "UserHandler": {
        "GET": {}
    },
    "UserFactsHandler": {
        "GET": {}
    },
    "UserSettingsHandler": {
        "GET": {},
        "POST": {
            "$schema": "http://json-schema.org/draft-04/schema#",
            "type": "object",
            "properties": {
                "language": {
                    "enum": ["en"]
                },
                "measure": {
                    "enum": ["me", "im", "us"]
                },
                "theme": {
                    "enum": ["light", "dark"]
                }
            },
            "additionalProperties": false
        }
    },
    "UsersHandler": {
        "GET": {
            "$schema": "http://json-schema.org/draft-04/schema#",
            "type": "object",
            "oneOf": [
                {
                    "properties": {
                        "email": {
                            "type": "string"
                        }
                    },
                    "required": ["email"],
                    "additionalProperties": false
                },
                {
                    "properties": {
                        "username": {
                            "type": "string"
                        }
                    },
                    "required": ["username"],
                    "additionalProperties": false
                }
            ]
        },
        "POST": {
            "$schema": "http://json-schema.org/draft-04/schema#",
            "type": "object",
            "properties": {
                "email": {
                    "type": "string",
                    "format": "email"
                },
                "username": {
                    "type": "string",
                    "pattern": "^[a-zA-Z0-9_.-]+$",
                    "minLength": 3,
                    "maxLength": 21
                },
                "password": {
                    "type": "string",
                    "minLength": 3,
                    "maxLength": 21
                },
                "fullname": {
                    "type": "string"
                },
                "gender": {
                    "enum": [ "m", "f" ]
                },
                "birthdate": {
                    "type": "string",
                    "format": "date"
                },
                "lifestyle": {
                    "type": "integer"
                },
                "diabetic": {
                    "type": "boolean"
                },
                "body": {
                    "type": "object",
                    "properties": {
                        "height": {
                            "type": "number"
                        },
                        "weight": {
                            "type": "number"
                        },
                        "neck": {
                            "type": "number"
                        },
                        "abdomen": {
                            "type": "number"
                        },
                        "hip": {
                            "type": "number"
                        }
                    },
                    "additionalProperties": false
                },
                "settings": {
                    "type": "object",
                    "properties": {
                        "language": {
                            "enum": ["en"]
                        },
                        "measure": {
                            "enum": ["me", "im", "us"]
                        },
                        "theme": {
                            "enum": ["light", "dark"]
                        }
                    },
                    "additionalProperties": false
                }
            },
            "required": [ "email", "username", "password", "fullname", "gender",
                          "birthdate", "lifestyle", "diabetic" ],
            "additionalProperties": false
        }
    },
    "AuthHandler": {
        "POST": {},
        "DELETE": {}
    },
    "UserPhotoHandler": {
        "GET": {}
    },
    "FoodHandler": {
        "GET": {}
    },
    "FoodIdHandler": {
        "GET": {}
    }
}
