{
    "UserHandler": {
        "GET": {}
    },
    "UsersHandler": {
        "GET": {},
        "POST": {
            "$schema": "http://json-schema.org/draft-04/schema#",
            "type": "object",
            "properties": {
                "email": {
                    "type": "string",
                    "format": "email"
                },
                "username": {
                    "type": "string",
                    "pattern": "^[a-zA-Z0-9_.-]+$",
                    "minLength": 3,
                    "maxLength": 21
                },
                "password": {
                    "type": "string",
                    "minLength": 3,
                    "maxLength": 21
                },
                "fullname": {
                    "type": "string"
                },
                "gender": {
                    "enum": [ "m", "f" ]
                },
                "birthdate": {
                    "type": "string",
                    "format": "date"
                },
                "height": {
                    "type": "number"
                },
                "weight": {
                    "type": "number"
                },
                "lifestyle": {
                    "type": "integer"
                },
                "diabetic": {
                    "type": "boolean"
                },
                "neck": {
                    "type": "number"
                },
                "hip": {
                    "type": "number"
                },
                "abdomen": {
                    "type": "number"
                }
            },
            "required": [ "email", "username", "password", "fullname", "gender",
                          "birthdate", "height", "weight", "lifestyle" ],
            "additionalProperties": false
        }
    },
    "AuthHandler": {
        "POST": {}
    }
}
